<div class="container text-center mt-3 p-3 border">

  <h1>New review</h1>

  <div class="container text-start p-3 border">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
  </div>

</div>
